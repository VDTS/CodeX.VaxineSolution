  </AbsoluteLayout>-->

  <ContentPage.ToolbarItems>
    <ToolbarItem
                 IconImageSource="Home_Registration.png"
                 Command="{Binding RegistrationPageCommand}" />
  </ContentPage.ToolbarItems>
  
  <ContentPage.Content>
    <CollectionView>
      <CollectionView.ItemTemplate>
        <DataTemplate>
          <Grid>
            <local:CustomEntryRenderer TextColor="Black"
                                       x:Name="HouseNo"
                                       Text="{Binding HouseNo}"
                                       Placeholder="House No"></local:CustomEntryRenderer>
            <local:CustomEntryRenderer TextColor="Black"
                                       x:Name="FullName"
                                       Text="{Binding FullName}"
                                       Placeholder="Full Name"></local:CustomEntryRenderer>
            <SelectableItemsView x:Name="Vaccined"
                                 ItemsSource="{Binding ListItems}" ></SelectableItemsView>
          </Grid>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>
  </ContentPage.Content>
</ContentPage>