<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaxineApp.Views.Home.StatusPage"
             xmlns:local="clr-namespace:VaxineApp.Renderers"
             xmlns:viewmodels="clr-namespace:VaxineApp.ViewModels"
             Title="Status">
  <ContentPage.BindingContext>
    <viewmodels:StatusViewModel></viewmodels:StatusViewModel>
  </ContentPage.BindingContext>
  <!--<AbsoluteLayout>
    <ImageButton Source="Home_Registration.png"
                 BackgroundColor="Transparent"
                 AbsoluteLayout.LayoutFlags="PositionProportional"
                 AbsoluteLayout.LayoutBounds=".95,.95,75,50"
                 Clicked="Registration_Clicked"
                 />
