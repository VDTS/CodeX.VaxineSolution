<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaxineApp.Views.Home.Family.AddFamilyPage"
             xmlns:ViewModel="clr-namespace:VaxineApp.ViewModels.Home.Family"
             xmlns:local="clr-namespace:VaxineApp.Renderers"
             Shell.TabBarIsVisible="False"
             Shell.PresentationMode="Modal"
             Title="Add Family">
  <ContentPage.BindingContext>
    <ViewModel:AddFamilyViewModel></ViewModel:AddFamilyViewModel>
  </ContentPage.BindingContext>
  <ContentPage.Content>
    <StackLayout Padding="40" Spacing="10">
      <Entry Text="{Binding HouseNo, Mode=OneWayToSource}"
                                 Placeholder="House No."
                                 Keyboard="Numeric"></Entry>
      <Entry Text="{Binding ParentName}"
                                 Placeholder="Parent Name"></Entry>
      <Entry Text="{Binding PhoneNumber}"
                                 Placeholder="Parent Number"></Entry>
      <Button Text="Save"
              TranslationY="50"
              WidthRequest="130"
              HeightRequest="50"
              HorizontalOptions="Center"
              Command="{Binding SaveFamilyCommand}"></Button>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>