<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaxineApp.Views.Home.Family.FamilyDetailsPage"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:pages="clr-namespace:VaxineApp.Views.Home.Family"
             Title="Family Details">
             <!--xmlns:ViewModel="clr-namespace:VaxineApp.ViewModels.Home.Family"-->
    <!--<ViewModel:FamilyDetailsViewModel></ViewModel:FamilyDetailsViewModel>-->
  <d:ContentPage.BindingContext>
    <pages:FamilyDetailsPage />
  </d:ContentPage.BindingContext>
  <ContentPage.ToolbarItems>
    <ToolbarItem Order="Primary"
                 Icon="Search.png"
                 Text="Search"
                 Priority="1" />
    <ToolbarItem Order="Secondary"
                 Text="Add Child"
                 Priority="3"
                 Clicked="ToolbarItem_Clicked" />
    <ToolbarItem Order="Secondary"
                 Icon="SavePDF"
                 Text="Share"
                 Priority="0" />
  </ContentPage.ToolbarItems>
  <ContentPage.Content>
    <StackLayout x:Name="PageContent">
      <Label WidthRequest="40"
             HeightRequest="40"
             Grid.Column="0"
             TextColor="Black"
             Text="{Binding Family.HouseNo}"></Label>
      <Label Grid.Column="2"
             Grid.Row="0"
             FontSize="20"
             TextColor="black"
             Text="{Binding Family.ParentName}"></Label>
      <Label Grid.Column="2"
             Grid.Row="1"
             Padding="0, -5, 0, 0"
             TextColor="Black"
             Text="{Binding Family.PhoneNumber}"></Label>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>