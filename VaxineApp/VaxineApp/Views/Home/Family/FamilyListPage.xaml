<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaxineApp.Views.Home.Family.FamilyListPage"
             xmlns:ViewModel="clr-namespace:VaxineApp.ViewModels.Home.Family"
             Title="Family List">
  <ContentPage.BindingContext>
    <ViewModel:FamilyListViewModel></ViewModel:FamilyListViewModel>
  </ContentPage.BindingContext>
  <ContentPage.ToolbarItems>
    <ToolbarItem Order="Primary"
                 Icon="Search.png"
                 Text="Search"
                 Priority="1" />
    <ToolbarItem Order="Secondary"
                 Text="Add Family"
                 Priority="3" 
                 Command="{Binding AddFamilyCommand}"/>
    <ToolbarItem Order="Secondary"
                 Icon="SavePDF"
                 Text="Share"
                 Priority="0" />
  </ContentPage.ToolbarItems>
    <ContentPage.Content>
    <RefreshView>
      <CollectionView>
        <CollectionView.ItemTemplate>
          <DataTemplate>
            <Grid>
              <Label Text="Hello" TextColor="Black"></Label>
            </Grid>
          </DataTemplate>
        </CollectionView.ItemTemplate>
      </CollectionView>
    </RefreshView>
    </ContentPage.Content>
</ContentPage>