<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaxineApp.Views.Home.Status.ChildVaccinePage"
             Title="Child Details">
  <ContentPage.ToolbarItems>
    <ToolbarItem IconImageSource="Home_Registration.png"
                 Command="{Binding AddVaccineCommand}" />
  </ContentPage.ToolbarItems>
  <ContentPage.Content>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="0.7*"></RowDefinition>
        <RowDefinition Height="0.1*"></RowDefinition>
        <RowDefinition Height="*"></RowDefinition>
      </Grid.RowDefinitions>
      <StackLayout Grid.Row="0"
                   Padding="20, 40, 20, 20">
        <Label Text="{Binding Child.FullName, Mode=TwoWay}"></Label>
        <Label Text="{Binding Child.Gender}">
        </Label>
        <Label Text="{Binding Child.RINo, Mode=TwoWay}"></Label>
        <Label Text="{Binding Child.DOB}"></Label>
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
          </Grid.ColumnDefinitions>
          <Label Text="OPV0"
                 Grid.Column="0"></Label>
          <CheckBox Grid.Column="1"
                    IsChecked="{Binding Child.OPV0}"
                    IsEnabled="False" />
        </Grid>
      </StackLayout>
      <CollectionView Grid.Row="1">
      </CollectionView>
    </Grid>
  </ContentPage.Content>
</ContentPage>