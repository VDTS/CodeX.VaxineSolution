<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaxineApp.Views.Home.Profile.EditProfile"
             xmlns:local="clr-namespace:VaxineApp.Renderers"
             xmlns:viewmodel="clr-namespace:VaxineApp.ViewModels.Login"
             Title="Edit Profile">
  <ContentPage.BindingContext>
    <viewmodel:LoginViewModel></viewmodel:LoginViewModel>
  </ContentPage.BindingContext>
  <ScrollView>
    <StackLayout Padding="20, 40, 20, 20">
      <Image Source="Profile_PhotoPlaceholder.png"></Image>
      <BoxView   VerticalOptions="Center"
                 HorizontalOptions="Center"
                 HeightRequest="1"
                 WidthRequest="200"
                 Color="#5b5d68"></BoxView>
      <local:CustomEntryRenderer TextColor="Black"
                                 Text="{Binding FullName}"
                                 Placeholder="Name"
                                 PlaceholderColor="Gray"></local:CustomEntryRenderer>
      <Picker Title="Gender"
              TextColor="Black"
              TitleColor="Black"
              SelectedItem="{Binding Gender}">
        <Picker.ItemsSource>
          <x:Array Type="{x:Type x:String}">
            <x:String>Male</x:String>
            <x:String>Female</x:String>
          </x:Array>
        </Picker.ItemsSource>
      </Picker>
      <local:CustomEntryRenderer TextColor="Black"
                                 Text="{Binding FatherOrHusbandName}"
                                 Placeholder="Father or Husband Name"
                                 PlaceholderColor="Gray"></local:CustomEntryRenderer>
      <local:CustomEntryRenderer TextColor="Black"
                                 Text="{Binding Age}"
                                 Placeholder="Age"
                                 PlaceholderColor="Gray"></local:CustomEntryRenderer>
      <!--<DatePicker TextColor="Black" Date="{Binding D}"></DatePicker>-->

      <local:CustomEntryRenderer TextColor="Black"
                                 Text="{Binding Email}"
                                 AutomationId="EditProfilePage_Email"
                                 Placeholder="Email"
                                 PlaceholderColor="Gray"></local:CustomEntryRenderer>
      <local:CustomEntryRenderer TextColor="Black"
                                 Text="{Binding ConfirmEmail}"
                                 Placeholder="Confirm Email"
                                 PlaceholderColor="Gray"></local:CustomEntryRenderer>
      <local:CustomEntryRenderer TextColor="Black"
                                 Text="{Binding Password}"
                                 Placeholder="Password"
                                 IsPassword="True"
                                 PlaceholderColor="Gray"></local:CustomEntryRenderer>
      <local:CustomEntryRenderer TextColor="Black"
                                 Text="{Binding ConfirmPassword}"
                                 Placeholder=" Confirm Password"
                                 IsPassword="True"
                                 PlaceholderColor="Gray"></local:CustomEntryRenderer>
      <Button Text="Update Profile"
              Command="{Binding SaveDataCommand}"
              Margin="20" AutomationId="EditProfile_SaveButton"></Button>
    </StackLayout>
  </ScrollView>
</ContentPage>