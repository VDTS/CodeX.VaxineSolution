<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaxineApp.Views.Home.Profile.ProfilePage"
             xmlns:local="clr-namespace:VaxineApp.Renderers"
             xmlns:ViewModel="clr-namespace:VaxineApp.ViewModels.Home.Profile"
             Title="Profile">
  <ContentPage.BindingContext>
    <ViewModel:ProfileViewModel></ViewModel:ProfileViewModel>
  </ContentPage.BindingContext>
  <ContentPage.ToolbarItems>
    <ToolbarItem IconImageSource="Universal_Edit.png"
                 Command="{Binding EditProfileCommand}" />
  </ContentPage.ToolbarItems>
  <ContentPage.Content>
    <StackLayout Padding="20, 40, 20, 20">
      <Image Source="Profile_PhotoPlaceholder.png"></Image>
      <BoxView   VerticalOptions="Center"
                 HorizontalOptions="Center"
                 HeightRequest="1"
                 WidthRequest="200"></BoxView>
      <Label Text="{Binding Profile.FullName}"></Label>
      <Label Text="{Binding Profile.Gender}">
      </Label>
      <Label Text="{Binding Profile.FatherOrHusbandName}"></Label>
      <Label Text="{Binding Profile.Age}"></Label>
      <Label Text="{Binding Profile.Role}"></Label>
      <Label AutomationId="ProfilePage_Email"
             Text="{Binding Profile.Email}"></Label>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>