<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaxineApp.Views.Home.Area.Area.EditAreaPage"
             xmlns:ViewModel="clr-namespace:VaxineApp.ViewModels.Home.Area.Area"
             xmlns:local="clr-namespace:VaxineApp.Renderers"
             Shell.TabBarIsVisible="False"
             Title="Add Area">
  <ContentPage.BindingContext>
    <ViewModel:AreaViewModel></ViewModel:AreaViewModel>
  </ContentPage.BindingContext>
  <ContentPage.Content>
    <ScrollView Padding="40">
      <StackLayout Spacing="10">
        <Entry Placeholder="Team No."
                                   Text="{Binding TeamNo}"></Entry>
        <Entry Placeholder="Social Mobilizer Id"
                                   Text="{Binding SocialMobilizerId}"></Entry>
        <Entry Placeholder="CHW Name"
                                   Text="{Binding CHWName}">
        </Entry>

        <Button Text="Update Area" TranslationY="50" WidthRequest="130" HeightRequest="50" HorizontalOptions="Center"
                Command="{Binding SaveAreaCommand}"
                ></Button>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>