<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaxineApp.Views.Home.Area.Area.AreaPage"
             xmlns:viewmodel="clr-namespace:VaxineApp.ViewModels.Home.Area.Area"
             Title="Area">
  <ContentPage.BindingContext>
    <viewmodel:AreaViewModel></viewmodel:AreaViewModel>
  </ContentPage.BindingContext>
  <ContentPage.ToolbarItems>
    <ToolbarItem IconImageSource="Home_Registration.png"
                 Command="{Binding EditAreaCommand}" />
    
  </ContentPage.ToolbarItems>
  <ContentPage.Content>
    <ScrollView>
      <StackLayout>
        <Label TextColor="Black" Text="{Binding Area.ClusterName}"></Label>
        <Label TextColor="Black" Text="{Binding Area.TeamNo}"></Label>
        <Label TextColor="Black" Text="{Binding Area.SocialMobilizerId}"></Label>
        <Label TextColor="Black" Text="{Binding Area.CHWName}"></Label>
        <Label TextColor="Black" Text="{Binding TotalHouseholds}"></Label>
        <Label TextColor="Black" Text="{Binding TotalMasjeeds}"></Label>
        <Label TextColor="Black" Text="{Binding TotalChildren}"></Label>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>