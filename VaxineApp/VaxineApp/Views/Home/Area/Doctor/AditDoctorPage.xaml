<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaxineApp.Views.Home.Area.Doctor.AditDoctorPage"
             xmlns:ViewModel="clr-namespace:VaxineApp.ViewModels.Home.Area.Doctor"
             xmlns:local1="clr-namespace:VaxineApp.Renderers"
             Title="Add Doctor">
  <ContentPage.BindingContext>
    <ViewModel:AddDoctorViewModel></ViewModel:AddDoctorViewModel>
  </ContentPage.BindingContext>
  <ContentPage.Content>
    <StackLayout>

      <Entry Placeholder="Name"
             Text="{Binding Name}"></Entry>
      <Label  Text="IsHeProvindingSupportForSIAAndVaccination"></Label>
      <CheckBox Grid.Column="1"
                IsChecked="{Binding IsHeProvindingSupportForSIAAndVaccination, Mode=TwoWay}" />
      <Button Text="Save"
              Command="{Binding SaveDoctorCommand}"></Button>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>