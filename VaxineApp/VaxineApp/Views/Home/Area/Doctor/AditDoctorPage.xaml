<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaxineApp.Views.Home.Area.Doctor.AditDoctorPage"
             xmlns:ViewModel="clr-namespace:VaxineApp.ViewModels.Home.Area.Doctor"
             xmlns:local1="clr-namespace:VaxineApp.Renderers"
             Title="Add Doctor">
  <ContentPage.BindingContext>
    <ViewModel:AddDoctorViewModel></ViewModel:AddDoctorViewModel>
  </ContentPage.BindingContext>
  <ContentPage.Content>
    <StackLayout Padding="40" Spacing="10">

      <Entry Placeholder="Name"
             Text="{Binding Name}"></Entry>
      <StackLayout Orientation="Horizontal">
        <CheckBox
                IsChecked="{Binding IsHeProvindingSupportForSIAAndVaccination, Mode=TwoWay}" />
        <Label  Text="Is he provinding support forSIA and vaccination"></Label>
        </StackLayout>
      <Button Text="Save"
              TranslationY="50"
              WidthRequest="130"
              HeightRequest="50"
              HorizontalOptions="Center"
              Command="{Binding SaveDoctorCommand}"></Button>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>