<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaxineApp.Views.Home.Area.Influencer.AditInfluencerPage"
             xmlns:ViewModel="clr-namespace:VaxineApp.ViewModels.Home.Area.Influencer"
             xmlns:local="clr-namespace:VaxineApp.Renderers"
             Title="Add Influencer">
  <ContentPage.BindingContext>
    <ViewModel:AddInfluecerViewModel></ViewModel:AddInfluecerViewModel>
  </ContentPage.BindingContext>
  <ContentPage.Content>
    <StackLayout>

      <Entry Placeholder="Name"
             Text="{Binding Name}"></Entry>
      <Entry Placeholder="Contact"
             Text="{Binding Contact}"></Entry>
      <Entry Placeholder="Position"
             Text="{Binding Position}">
      </Entry>
      <Label Text="Does he providing support?"></Label>
      <CheckBox IsChecked="{Binding DoesHeProvidingSupport}"></CheckBox>

      <Button Text="Save"
              Command="{Binding SaveInfluencerCommand}"></Button>

    </StackLayout>
  </ContentPage.Content>
</ContentPage>