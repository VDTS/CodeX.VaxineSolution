<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaxineApp.Views.Home.Area.School.AditSchoolPage"
             xmlns:ViewModel="clr-namespace:VaxineApp.ViewModels.Home.Area.School"
             xmlns:local="clr-namespace:VaxineApp.Renderers"
             Title="Add School">
  <ContentPage.BindingContext>
    <ViewModel:AddSchoolViewModel></ViewModel:AddSchoolViewModel>
  </ContentPage.BindingContext>
  <ContentPage.Content>
    <StackLayout>
      <local:CustomEntryRenderer TextColor="Black"
                                 Placeholder="School Name"
                                 PlaceholderColor="Gray"
                                 Text="{Binding SchoolName}"></local:CustomEntryRenderer>
      <local:CustomEntryRenderer TextColor="Black"
                                 Placeholder="Key Influencer"
                                 PlaceholderColor="Gray"
                                 Text="{Binding KeyInfluencer}"></local:CustomEntryRenderer>
      <Button Text="Save"
              Command="{Binding SaveSchoolCommand}"></Button>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>